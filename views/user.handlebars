{{!-- TODO CSS styling of tiles --}}

<section class="container">
    {{#each users as |user| }}
    
    <div class="tile is-ancestor">
        <div class="title is-8 is-vertical is-parent">
            <div class="title is-child box">

                {{#each pets as |pet| }}
                    <article class="tile notification is-primary has-text-info">
                        <p>ID: {{user.id}} / {{user.username}}</p>
                            <p class="petname">/ {{pet_name}} / </p>

                            <section class="flex-row justify-center">
                                <a href="/my_pets/{{user.id}}">
                                <header>{{user.my_pets}} Profile</header>
                                </a>
                            </section>
                        </p>
                    </article>   
                {{/each}} 
                   
            </div>
        </div> 
    </div> 
    {{/each}} 
    
</section>